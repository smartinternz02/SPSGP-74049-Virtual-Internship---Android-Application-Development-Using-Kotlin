<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/green"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/idLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >
            <TextView
                android:id="@+id/TVGroceryName"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Grocery Name"
                android:textColor="@color/red"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_margin="13dp"

                />
            <TextView
                android:layout_width="40dp"
                android:layout_margin="11dp"
                android:layout_height="wrap_content"
                android:text="Qty:"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/TVGroceryQuantity"

                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Quant"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/TVGroceryRate"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Rate"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_margin="9dp"
                />

            <ImageView
                android:id="@+id/DeleteGrocery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:src="@drawable/ic_delete_outline"
                app:tint="@color/white"
                />
        </LinearLayout>



        <TextView
            android:id="@+id/TVTotalCost"
            android:text="Total Cost:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@+id/idLL1"/>

        <TextView
            android:id="@+id/TVTotalAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idLL1"
            android:layout_marginStart="150dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:text="Amt"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/GroceryCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/TVTotalCost"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>